<UserControl x:Class="WinGameOS.Views.GameLibraryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="40,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â• HEADER â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="ðŸŽ® Game Library" FontSize="28" FontWeight="Bold"
                           Foreground="{StaticResource TextBrush}"
                           FontFamily="{StaticResource TitleFont}"/>
                <TextBlock FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0">
                    <Run Text="{Binding TotalGamesCount, Mode=OneWay}"/>
                    <Run Text=" games found"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource PrimaryButton}" Content="ðŸ” Scan Games"
                        Command="{Binding ScanGamesCommand}" Margin="0,0,8,0"/>
                <Button Style="{StaticResource SecondaryButton}" Content="âž• Add Game"
                        Click="AddGameButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â• SEARCH & PLATFORM FILTERS â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Style="{StaticResource SearchBox}"
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                     MaxWidth="500" HorizontalAlignment="Left"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Style="{StaticResource SecondaryButton}" Content="All"
                        Click="FilterButton_Click" Tag="All" Margin="0,0,6,0"/>
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸŸ¦ Steam"
                        Click="FilterButton_Click" Tag="Steam" Margin="0,0,6,0"/>
                <Button Style="{StaticResource SecondaryButton}" Content="â¬› Epic"
                        Click="FilterButton_Click" Tag="Epic Games" Margin="0,0,6,0"/>
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸŸ© Xbox"
                        Click="FilterButton_Click" Tag="Xbox Game Pass" Margin="0,0,6,0"/>
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸ“ Manual"
                        Click="FilterButton_Click" Tag="Manual"/>
            </StackPanel>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â• GAME GRID â•â•â•â•â•â•â•â•â•â•â• -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding FilteredGames}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="220" Height="160" Margin="0,0,16,16"
                                CornerRadius="16" Cursor="Hand"
                                BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                                MouseLeftButtonDown="GameCard_Click">
                            <Border.Background>
                                <SolidColorBrush Color="{StaticResource CardBg}"/>
                            </Border.Background>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="{StaticResource AccentPrimary}" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="{StaticResource BorderColor}" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>

                            <Grid Margin="16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                    <TextBlock Text="ðŸŽ®" FontSize="36" HorizontalAlignment="Center"
                                               VerticalAlignment="Center" Opacity="0.5"/>
                                    <TextBlock Text="â­" FontSize="14" HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                </Grid>

                                <TextBlock Grid.Row="1" Text="{Binding Title}" FontSize="14" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding Title}"/>

                                <Border Grid.Row="2" HorizontalAlignment="Left"
                                        CornerRadius="6" Padding="8,3" Margin="0,6,0,0"
                                        Background="#20FFFFFF">
                                    <TextBlock Text="{Binding Platform}" FontSize="10"
                                               Foreground="{StaticResource TextMutedBrush}"/>
                                </Border>

                                <Button Grid.Row="3" Style="{StaticResource PrimaryButton}"
                                        Content="â–¶ Play" FontSize="12" Padding="12,6"
                                        Margin="0,8,0,0" HorizontalAlignment="Stretch"
                                        Click="PlayButton_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- â•â•â•â•â•â•â•â•â•â•â• STATUS BAR â•â•â•â•â•â•â•â•â•â•â• -->
        <Border Grid.Row="3" Background="{StaticResource SecondaryBgBrush}"
                CornerRadius="10" Padding="16,8" Margin="0,12,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="ðŸ”„" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"
                               Visibility="{Binding IsScanning, Converter={StaticResource BoolToVis}}"/>
                    <TextBlock Text="{Binding TotalGamesCount, StringFormat={}{0} games}" FontSize="12"
                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
