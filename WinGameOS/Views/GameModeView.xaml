<UserControl x:Class="WinGameOS.Views.GameModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="40,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â• WELCOME HERO â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Style="{StaticResource Card}" Margin="0,0,0,24">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1A1A2E" Offset="0"/>
                        <GradientStop Color="#16213E" Offset="0.5"/>
                        <GradientStop Color="#1A1A2E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <StackPanel>
                        <TextBlock Text="ðŸŽ® Welcome to WinGameOS"
                                   FontSize="32" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   FontFamily="{StaticResource TitleFont}"/>
                        <TextBlock Text="Your PC is now a gaming console. Choose a game to play or adjust your settings."
                                   FontSize="15" Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,8,0,20"
                                   FontFamily="{StaticResource MainFont}"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource PrimaryButton}"
                                    Content="â–¶  Open Library"
                                    Command="{Binding NavigateCommand}" CommandParameter="Library"
                                    Margin="0,0,12,0"/>
                            <Button Style="{StaticResource SecondaryButton}"
                                    Content="ðŸ”  Scan Games"
                                    Command="{Binding GameLibrary.ScanGamesCommand}"
                                    Margin="0,0,12,0"/>
                            <Button Style="{StaticResource SecondaryButton}"
                                    Content="âš™  Settings"
                                    Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Decorative glow -->
                    <Ellipse Width="200" Height="200" HorizontalAlignment="Right"
                             VerticalAlignment="Top" Margin="0,-40,-40,0" Opacity="0.08">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="{StaticResource AccentPrimary}" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â• SYSTEM STATUS CARDS â•â•â•â•â•â•â•â•â•â•â• -->
            <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,24">
                <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="âš¡ Performance" FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding Settings.PerformanceMode}" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource AccentSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ”‹ Battery" FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding BatteryPercent, StringFormat={}{0}%}" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGreenBrush}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ–¥ï¸ CPU" FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:F0}%}" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource AccentSecondaryBrush}"/>
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸŒ¡ï¸ Temp" FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}" Margin="0,0,0,8"/>
                        <TextBlock Text="{Binding CpuTemp, StringFormat={}{0:F0}Â°C}" FontSize="20" FontWeight="Bold"
                                   Foreground="{StaticResource AccentOrangeBrush}"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- â•â•â•â•â•â•â•â•â•â•â• RECENT GAMES â•â•â•â•â•â•â•â•â•â•â• -->
            <StackPanel Grid.Row="2" Margin="0,0,0,24">
                <TextBlock Text="ðŸ•¹ï¸ Recent Games" FontSize="20" FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}" Margin="0,0,0,16"
                           FontFamily="{StaticResource TitleFont}"/>

                <ItemsControl ItemsSource="{Binding GameLibrary.FilteredGames}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource Card}" Width="200" Height="120"
                                    Margin="0,0,12,12" Cursor="Hand">
                                <Grid>
                                    <StackPanel VerticalAlignment="Bottom">
                                        <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Platform}" FontSize="11"
                                                   Foreground="{StaticResource TextMutedBrush}"/>
                                    </StackPanel>
                                    <TextBlock Text="â­" FontSize="16" HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Style="{StaticResource Card}" Padding="40"
                        Visibility="{Binding GameLibrary.IsScanning, Converter={StaticResource BoolToVis}}">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ” Scanning for games..." FontSize="16"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- â•â•â•â•â•â•â•â•â•â•â• KEYBOARD SHORTCUTS â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="3" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="âŒ¨ï¸ Keyboard Shortcuts" FontSize="16" FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" Margin="0,0,0,12"/>
                    <UniformGrid Columns="3">
                        <StackPanel Margin="0,0,12,0">
                            <TextBlock Text="Ctrl+Alt+G" FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontFamily="{StaticResource MonoFont}"/>
                            <TextBlock Text="Toggle Game Mode" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <StackPanel Margin="6,0">
                            <TextBlock Text="Ctrl+Alt+S" FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontFamily="{StaticResource MonoFont}"/>
                            <TextBlock Text="Quick Settings" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Ctrl+Alt+P" FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource AccentBrush}"
                                       FontFamily="{StaticResource MonoFont}"/>
                            <TextBlock Text="Performance Overlay" FontSize="12"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </UniformGrid>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
