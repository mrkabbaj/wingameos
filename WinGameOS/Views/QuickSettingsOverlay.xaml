<UserControl x:Class="WinGameOS.Views.QuickSettingsOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="360">

    <Border CornerRadius="20,0,0,20" Padding="24,20"
            BorderThickness="1,1,0,1" BorderBrush="{StaticResource BorderBrush}">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource SecondaryBg}" Opacity="0.95"/>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <StackPanel>
            <!-- Header -->
            <TextBlock Text="âš¡ Quick Settings" FontSize="18" FontWeight="Bold"
                       Foreground="{StaticResource TextBrush}" Margin="0,0,0,24"
                       FontFamily="{StaticResource TitleFont}"/>

            <!-- Brightness Slider -->
            <StackPanel Margin="0,0,0,20">
                <Grid Margin="0,0,0,8">
                    <TextBlock Text="â˜€ï¸ Brightness" FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding Brightness, StringFormat={}{0}%}"
                               FontSize="13" Foreground="{StaticResource AccentSecondaryBrush}"
                               FontFamily="{StaticResource MonoFont}" HorizontalAlignment="Right"/>
                </Grid>
                <Slider Style="{StaticResource ConsoleSlider}"
                        Value="{Binding Brightness}" Minimum="0" Maximum="100"/>
            </StackPanel>

            <!-- Volume Slider -->
            <StackPanel Margin="0,0,0,20">
                <Grid Margin="0,0,0,8">
                    <TextBlock Text="ðŸ”Š Volume" FontSize="13"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding Volume, StringFormat={}{0}%}"
                               FontSize="13" Foreground="{StaticResource AccentSecondaryBrush}"
                               FontFamily="{StaticResource MonoFont}" HorizontalAlignment="Right"/>
                </Grid>
                <Slider Style="{StaticResource ConsoleSlider}"
                        Value="{Binding Volume}" Minimum="0" Maximum="100"/>
            </StackPanel>

            <!-- Mute Toggle -->
            <Border Background="#10FFFFFF" CornerRadius="10" Padding="16,10" Margin="0,0,0,16">
                <Grid>
                    <TextBlock Text="ðŸ”‡ Mute" FontSize="13"
                               Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                    <CheckBox Style="{StaticResource ToggleSwitch}" HorizontalAlignment="Right"
                              IsChecked="{Binding IsMuted}"/>
                </Grid>
            </Border>

            <!-- Separator -->
            <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,8,0,16"/>

            <!-- Performance Mode -->
            <TextBlock Text="âš¡ Performance Mode" FontSize="13"
                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

            <UniformGrid Columns="2" Rows="2" Margin="0,0,0,16">
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸŒ¿ Eco"
                        Margin="0,0,4,4" Click="SetPerfMode" Tag="Eco"/>
                <Button Style="{StaticResource SecondaryButton}" Content="âš–ï¸ Balanced"
                        Margin="4,0,0,4" Click="SetPerfMode" Tag="Balanced"/>
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸš€ Perf"
                        Margin="0,4,4,0" Click="SetPerfMode" Tag="Performance"/>
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸ”¥ Turbo"
                        Margin="4,4,0,0" Click="SetPerfMode" Tag="Turbo"/>
            </UniformGrid>

            <!-- Separator -->
            <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,8,0,16"/>

            <!-- Battery -->
            <Border Background="#10FFFFFF" CornerRadius="10" Padding="16,12" Margin="0,0,0,16">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="ðŸ”‹ Battery" FontSize="12"
                                   Foreground="{StaticResource TextMutedBrush}"/>
                        <TextBlock Text="{Binding BatteryPercent, StringFormat={}{0}%}"
                                   FontSize="22" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGreenBrush}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding BatteryTimeRemaining}" FontSize="11"
                               Foreground="{StaticResource TextMutedBrush}"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                </Grid>
            </Border>

            <!-- Quick Power Actions -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸ’¤ Sleep"
                        Command="{Binding SleepCommand}" FontSize="12" Margin="0,0,8,0"/>
                <Button Style="{StaticResource SecondaryButton}" Content="ðŸ”„ Restart"
                        Command="{Binding RestartCommand}" FontSize="12"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
