<Window x:Class="WinGameOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:WinGameOS.Views"
        Title="WinGameOS"
        WindowStyle="None" AllowsTransparency="True"
        WindowState="Maximized"
        Background="{StaticResource PrimaryBgBrush}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid x:Name="MainLayout">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="64"/>
            </Grid.RowDefinitions>

            <!-- â•â•â•â•â•â•â•â•â•â•â• TOP STATUS BAR â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="0" Background="{StaticResource SecondaryBgBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸŽ®" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="WinGameOS" FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   FontFamily="{StaticResource TitleFont}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Center: Current View Title -->
                    <TextBlock Grid.Column="1" Text="{Binding CurrentView}" FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               FontFamily="{StaticResource MainFont}"/>

                    <!-- Right: System Indicators -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <!-- CPU -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <TextBlock Text="CPU" FontSize="10" Foreground="{StaticResource TextMutedBrush}"
                                       VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding CpuUsage, StringFormat={}{0:F0}%}" FontSize="12"
                                       Foreground="{StaticResource AccentSecondaryBrush}"
                                       FontFamily="{StaticResource MonoFont}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- RAM -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <TextBlock Text="RAM" FontSize="10" Foreground="{StaticResource TextMutedBrush}"
                                       VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock FontSize="12" Foreground="{StaticResource AccentSecondaryBrush}"
                                       FontFamily="{StaticResource MonoFont}" VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:F1}/{1:F0}GB">
                                        <Binding Path="RamUsedGB"/>
                                        <Binding Path="RamTotalGB"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                        <!-- Battery -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,0">
                            <TextBlock Text="ðŸ”‹" FontSize="14" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="{Binding BatteryPercent, StringFormat={}{0}%}" FontSize="12"
                                       Foreground="{StaticResource AccentGreenBrush}"
                                       FontFamily="{StaticResource MonoFont}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Separator -->
                        <Border Width="1" Height="20" Background="{StaticResource BorderBrush}" Margin="0,0,16,0"/>

                        <!-- Time -->
                        <TextBlock Text="{Binding CurrentTime}" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextBrush}"
                                   FontFamily="{StaticResource MonoFont}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- â•â•â•â•â•â•â•â•â•â•â• CONTENT AREA â•â•â•â•â•â•â•â•â•â•â• -->
            <Grid Grid.Row="1">
                <views:GameModeView x:Name="GameModeView" DataContext="{Binding}"/>
                <views:GameLibraryView x:Name="LibraryView" Visibility="Collapsed" DataContext="{Binding GameLibrary}"/>
                <views:SettingsView x:Name="SettingsViewPanel" Visibility="Collapsed" DataContext="{Binding Settings}"/>
            </Grid>

            <!-- â•â•â•â•â•â•â•â•â•â•â• BOTTOM NAVIGATION BAR â•â•â•â•â•â•â•â•â•â•â• -->
            <Border Grid.Row="2" Background="{StaticResource SecondaryBgBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                        <Button Style="{StaticResource NavButton}"
                                Command="{Binding NavigateCommand}" CommandParameter="Home"
                                Click="NavButton_Click" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ " FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="Home" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButton}"
                                Command="{Binding NavigateCommand}" CommandParameter="Library"
                                Click="NavButton_Click" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="ðŸŽ®" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="Library" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButton}"
                                Command="{Binding NavigateCommand}" CommandParameter="Settings"
                                Click="NavButton_Click" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="âš™ï¸" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="Settings" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Button>

                        <!-- Separator -->
                        <Border Width="1" Height="36" Background="{StaticResource BorderBrush}" Margin="8,0"/>

                        <Button Style="{StaticResource NavButton}"
                                Command="{Binding ToggleGameModeCommand}" Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ–¥ï¸" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="Desktop" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource NavButton}"
                                Command="{Binding SleepCommand}">
                            <StackPanel>
                                <TextBlock Text="ðŸ’¤" FontSize="20" HorizontalAlignment="Center"/>
                                <TextBlock Text="Sleep" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Quick Settings Button (right) -->
                    <Button Style="{StaticResource NavButton}" HorizontalAlignment="Right" Margin="0,0,20,0"
                            Command="{Binding ToggleQuickSettingsCommand}">
                        <StackPanel>
                            <TextBlock Text="âš¡" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Quick" FontSize="11" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>

        <!-- â•â•â•â•â•â•â•â•â•â•â• TOAST NOTIFICATION â•â•â•â•â•â•â•â•â•â•â• -->
        <Border x:Name="ToastBar" HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,60,0,0" CornerRadius="12" Padding="24,12"
                Background="#E01A1A2E" BorderBrush="{StaticResource AccentBrush}" BorderThickness="1"
                Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVis}}">
            <Border.Effect>
                <DropShadowEffect Color="{StaticResource AccentPrimary}"
                                  BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
            <TextBlock Text="{Binding ToastMessage}" Foreground="{StaticResource TextBrush}"
                       FontSize="14" FontFamily="{StaticResource MainFont}"/>
        </Border>

        <!-- â•â•â•â•â•â•â•â•â•â•â• QUICK SETTINGS OVERLAY â•â•â•â•â•â•â•â•â•â•â• -->
        <views:QuickSettingsOverlay x:Name="QuickSettings"
            Visibility="{Binding IsQuickSettingsOpen, Converter={StaticResource BoolToVis}}"
            DataContext="{Binding Settings}"
            HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
